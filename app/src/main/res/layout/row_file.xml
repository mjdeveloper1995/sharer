<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_180"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardElevation="@dimen/dp_4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:src="@drawable/colth"
            android:scaleType="centerCrop"
            android:background="@drawable/image_top_round_corner"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:text="@string/baby_winter_clothes"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="@id/ivImage"
            app:layout_constraintTop_toBottomOf="@id/ivImage" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMapIcon"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:src="@drawable/mappin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvName" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMapTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:text="@string/bhatinda_punjab"
            android:textColor="@color/font_color"
            android:textSize="@dimen/font_small"
            app:layout_constraintBottom_toBottomOf="@id/ivMapIcon"
            app:layout_constraintLeft_toRightOf="@id/ivMapIcon"
            app:layout_constraintTop_toTopOf="@id/ivMapIcon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_16"
            android:text="Rs 299"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small"
            app:layout_constraintLeft_toLeftOf="@id/ivMapIcon"
            app:layout_constraintTop_toBottomOf="@id/ivMapIcon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>